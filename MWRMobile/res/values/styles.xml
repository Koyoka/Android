<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
     <!-- Application theme. -->
    <style name="AppTheme1" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
     <style name="font_main_information">
         <item name="android:textColor">#ffffff</item>
         <item name="android:textSize">15sp</item>
         <item name="android:padding">2dip</item>
     </style>
     <style name="font_main_txt">
         <item name="android:textColor">#ffffff</item>
         <item name="android:textSize">20dip</item>
         <item name="android:paddingTop">5dip</item>
         <item name="android:gravity">right</item>
     </style>
     
     <style name="font_list_txt">
         <item name="android:textColor">#3e3e3e</item>
         <item name="android:textSize">14dip</item>
     </style>
     
     <style name="layout_main_btn">
       
         <item name="android:padding">12dip</item>
     </style>
</resources>
