<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    android:paddingBottom="25dip"
    tools:context="${packageName}.${activityClass}" >

   
        
      <TextView 
          android:padding="2dip"
		android:gravity="right"
          android:id="@+id/txtNetState"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#ffffff"
          android:text=""/>
   
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_main_itemmargin"
           	android:gravity="center"
           	android:padding="2dip"
           	android:background="@drawable/infomation_bg"
            android:layout_weight="1">
             <TextView
                 android:id="@+id/txtWSCode"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_wscode"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="终端号：" />
              <TextView
                  android:id="@+id/txtInspector"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_inspector"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="跟车员：" />
              <TextView
                  android:id="@+id/txtDriver"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_inspector"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="驾驶员：" />
               <TextView
                   android:id="@+id/txtCarCode"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_carcode"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="车辆号：" />
               <TextView
                   android:id="@+id/txtTotalCount"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_totalcount"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="总数量：" />
               <TextView
                   android:id="@+id/txtTotalWeight"
                style="@style/font_main_information"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_txt_totalweight"
                android:drawablePadding="4dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="总重量：" />
                
              <Button 
	            android:id="@+id/btnTest"
	            android:visibility="gone"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="test click"/>
        </LinearLayout>
		  
        <RelativeLayout 
            android:id="@+id/btnRecoverCrate"
            style="@style/layout_main_btn"
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	     	android:layout_margin="@dimen/activity_main_itemmargin"
		    android:background="@drawable/btn_recover_x">
           
            <LinearLayout 
               	android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/icon_btn_recover" />
                <TextView 
	                style="@style/font_main_txt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="货箱回收"/>
            </LinearLayout>  
 
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout 
            android:id="@+id/btnRecoverToInventroy"
            style="@style/layout_main_btn"
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	     	android:layout_margin="@dimen/activity_main_itemmargin"
		    android:background="@drawable/btn_toinventory_x">
	        <LinearLayout 
               	android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/icon_btn_toinventory" />
                <TextView 
	                style="@style/font_main_txt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="提交入库"/>
            </LinearLayout>  
	     </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/btnRecoverToDestroy"
            style="@style/layout_main_btn"
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	     	android:layout_margin="@dimen/activity_main_itemmargin"
		    android:background="@drawable/btn_todestroy_x">
			<LinearLayout 
               	android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/icon_btn_todestroy" />
                <TextView 
	                style="@style/font_main_txt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="提交处置"/>
            </LinearLayout>  
          </RelativeLayout>
    </LinearLayout>
     <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout 
            android:id="@+id/btnSetting"
            style="@style/layout_main_btn"
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	     	android:layout_margin="@dimen/activity_main_itemmargin"
		    android:background="@drawable/btn_setting_x">
	        <LinearLayout 
               	android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/icon_btn_setting" />
                <TextView 
	                style="@style/font_main_txt"
	                android:layout_gravity="right"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="功能"/>
            </LinearLayout>  
         </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/btnLogout"
            style="@style/layout_main_btn"
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	     	android:layout_margin="@dimen/activity_main_itemmargin"
		    android:background="@drawable/btn_logout_x">
			<LinearLayout 
               	android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:src="@drawable/icon_btn_quit" />
                <TextView 
	                style="@style/font_main_txt"
					android:layout_gravity="right"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="退出"/>
            </LinearLayout>  
         </RelativeLayout>
    </LinearLayout>
  
    
    

</LinearLayout>
