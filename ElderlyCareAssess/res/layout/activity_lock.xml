<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity" >
    
     <LinearLayout
        android:layout_marginTop="190dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_title"
            android:textColor="#764714"
            android:textSize="@dimen/text_size_72px" />
    
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="请输入手势密码"
        android:textSize="19sp" />

    <com.yrkj.elderlycareassess.gusturelock.LockPatternView
        android:id="@+id/lock_pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
            android:id="@+id/btnLogoutView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_login_margin"
            android:layout_marginRight="@dimen/activity_login_margin"
            android:layout_marginTop="40dip"
            android:background="@drawable/btn_login_bg_x"
            android:text="退出"
            android:textColor="#866d2a"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>