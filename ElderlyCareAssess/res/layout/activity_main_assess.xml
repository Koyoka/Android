<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_theme"
    android:orientation="vertical" >
     <RelativeLayout 
        android:id="@+id/layoutActionBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_bg">
        
         <Button 
            android:layout_alignParentLeft="true"
            android:id="@+id/btnFinishView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:layout_centerVertical="true"
            style="@style/activity_main_assess_btn_back"
            />
         <TextView
             android:id="@+id/txtMainAssessTitleView" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             style="@style/activity_main_assess_text_title"
             android:text="Title"/>
         <Button 
            android:layout_alignParentRight="true"
            android:id="@+id/btnMenuView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:background="@drawable/btn_assess_menu_bg_x"
            android:layout_centerVertical="true"
            style="@style/activity_main_assess_btn_back"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layoutBodyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </FrameLayout>
    
     <LinearLayout
        android:id="@+id/layoutFootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:visibility="gone">

        <Button
            android:id="@+id/btnBackView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/activity_main_assess_tabs_font"
            android:text="back" >
        </Button>
		<ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tabs_split_bg" />
        <Button
            android:id="@+id/btnGoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/activity_main_assess_tabs_font"
            android:text="go" >
        </Button>
    </LinearLayout>

</LinearLayout>